<div class="comments">
    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        <button hidden type="button" class="upvote-btn">upvote</button>
    </section>
    {{/each}}
</div>